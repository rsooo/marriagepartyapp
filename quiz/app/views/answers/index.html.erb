<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:q1) %></th>
      <th><%= model_class.human_attribute_name(:q2) %></th>
      <th><%= model_class.human_attribute_name(:q3) %></th>
      <th><%= model_class.human_attribute_name(:q4) %></th>
      <th><%= model_class.human_attribute_name(:q5) %></th>
      <th><%= model_class.human_attribute_name(:q6) %></th>
      <th><%= model_class.human_attribute_name(:q7) %></th>
      <th><%= model_class.human_attribute_name(:q8) %></th>
      <th><%= model_class.human_attribute_name(:q9) %></th>
      <th><%= model_class.human_attribute_name(:q10) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to answer.id, answer_path(answer) %></td>
        <td><%= answer.name %></td>
        <td><%= answer.q1 %></td>
        <td><%= answer.q2 %></td>
        <td><%= answer.q3 %></td>
        <td><%= answer.q4 %></td>
        <td><%= answer.q5 %></td>
        <td><%= answer.q6 %></td>
        <td><%= answer.q7 %></td>
        <td><%= answer.q8 %></td>
        <td><%= answer.q9 %></td>
        <td><%= answer.q10 %></td>
        <td><%= answer.comment %></td>
        <td><%=l answer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_answer_path(answer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      answer_path(answer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_answer_path,
            :class => 'btn btn-primary' %>
