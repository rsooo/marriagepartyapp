  <%= f.input :q6 , required: true, collection: [["1: 0", 1],["2: 1", 2],["3: 2", 3],["4: 5", 4]]%>
  <%= f.input :q7 , required: true, collection: [["1: AS", 1],["2: TO", 2],["3: THE", 3],["4: HOGE", 4]]%>
