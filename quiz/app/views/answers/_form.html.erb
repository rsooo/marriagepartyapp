  <%= f.input :q2 , required: true, collection: [["1: Kyoto", 1],["2: Tokyo", 2],["3: Nara", 3],["4: Kanagawa", 4]]%>
  <%= f.input :q3 , required: true, collection: [["1: Harvard University", 1],["2: Osaka University", 2],["3: Pierre and Marie Curie University ", 3],["4: Paris Dauphine", 4]]%>
  <%= f.input :q4 , required: true, collection: [["1: Panda", 1],["2: Owl", 2],["3: Cat", 3],["4: Camel", 4]]%>
