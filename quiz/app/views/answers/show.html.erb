<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @answer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q1) %>:</strong></dt>
  <dd><%= @answer.q1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q2) %>:</strong></dt>
  <dd><%= @answer.q2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q3) %>:</strong></dt>
  <dd><%= @answer.q3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q4) %>:</strong></dt>
  <dd><%= @answer.q4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q5) %>:</strong></dt>
  <dd><%= @answer.q5 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q6) %>:</strong></dt>
  <dd><%= @answer.q6 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q7) %>:</strong></dt>
  <dd><%= @answer.q7 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q8) %>:</strong></dt>
  <dd><%= @answer.q8 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q9) %>:</strong></dt>
  <dd><%= @answer.q9 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:q10) %>:</strong></dt>
  <dd><%= @answer.q10 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @answer.comment %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              answers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_answer_path(@answer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              answer_path(@answer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
